<!--begain header-->
<header>
    <div class="upperHeader">
        <div class="container">
            <ul class="pull-right inline">
                {#<li><a class="invarseColor" href="#">My Wish List (5)</a></li>#}
                {#<li class="divider-vertical"></li>#}
                <li><a class="invarseColor" href="{{ path('nurix_bin_item') }}">{{ 'itemInBin.view_card'|trans({}, 'CatalogBundle') }}</a></li>
                <li class="divider-vertical"></li>
                <li><a class="invarseColor" href="{{ path('nurix_bin_order_form') }}">{{ 'itemInBin.checkout'|trans({}, 'CatalogBundle') }}</a></li>

                {% if app.user and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a class="invarseColor" href="{{ path('sonata_user_profile_show') }}">{{ 'layout.my_profile'|trans({},'FOSUserBundle') }}</a></li>
                    <li class="divider-vertical"></li>
                    <li><a class="invarseColor" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                    <li class="divider-vertical"></li>
                {% endif %}
            </ul>
            <p>

                {% if app.user and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}.&nbsp;

                {% else %}
                    {{ 'welcome'|trans({},'messages') }}
                    <a href="{{ path('fos_user_security_login') }}">
                        {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a> {{ 'or'|trans({},'messages') }} <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </p>
        </div><!--end container-->
    </div><!--end upperHeader-->

    <div class="middleHeader">
        <div class="container">

            <div class="middleContainer clearfix">

                <div class="siteLogo pull-left">
                    <h1><a href="{{ path("nurix_homepage") }}">Nurazia</a></h1>
                </div>

                <div class="pull-right">
                    {% render controller('CatalogBundle:Search:ShowForm') %}
                </div>

                <div class="pull-right">
                    {{ exchange_list() }}
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            {{ app.request.locale|upper }} <span class="caret"></span>
                        </a>
                        {% block language_menu %}
                        <ul class="dropdown-menu language">
                            <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">EN</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'cn'})) }}">CH</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ru'})) }}">RU</a></li>
                        </ul>
                        {% endblock %}
                    </div>

                    <div class="btn-group" id="bin_widget">{% render controller("CatalogBundle:Bin:mainBin") %}</div>
                </div><!--end pull-right-->

            </div><!--end middleCoontainer-->

        </div><!--end container-->
    </div><!--end middleHeader-->

    <div class="mainNav">
        <div class="container">
            <div class="navbar">
                {{ knp_menu_render('main', {'currentClass': 'active','ancestorClass':'active','template':'::main_menu.html.twig'}) }}
            </div>
        </div><!--end container-->
    </div><!--end mainNav-->

</header>
<!-- end header -->