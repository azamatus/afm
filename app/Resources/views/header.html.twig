<!--begain header-->
<header>
    <div class="upperHeader">
        <div class="container">
            <ul class="pull-right inline">
                <li><a class="invarseColor" href="#">My Account</a></li>
                <li class="divider-vertical"></li>
                <li><a class="invarseColor" href="#">My Wish List (5)</a></li>
                <li class="divider-vertical"></li>
                <li><a class="invarseColor" href="{{ path('nurix_bin_item') }}">{{ 'itemInBin.view_card'|trans({}, 'CatalogBundle') }}</a></li>
                <li class="divider-vertical"></li>
                <li><a class="invarseColor" href="{{ path('nurix_bin_order_form') }}">{{ 'itemInBin.checkout'|trans({}, 'CatalogBundle') }}</a></li>
            </ul>
            <p>
                Welcome to ShopFine, <a href="login.html">Login</a> or <a href="register.html">Create new account</a>
            </p>
        </div><!--end container-->
    </div><!--end upperHeader-->

    <div class="middleHeader">
        <div class="container">

            <div class="middleContainer clearfix">

                <div class="siteLogo pull-left">
                    <h1><a href="{{ path("nurix_homepage") }}">ShopFine</a></h1>
                </div>

                <div class="pull-right">
                    <form method="get" action="page" class="siteSearch">
                        <div class="input-append">
                            <input type="text" class="span2" id="appendedInputButton" placeholder="Search...">
                            <button class="btn btn-primary" type="submit" name=""><i class="icon-search"></i></button>
                        </div>
                    </form>
                </div>

                <div class="pull-right">
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            $ <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu currency">
                            <li><a href="#">$</a></li>
                            <li class="divider"></li>
                            <li><a href="#">?</a></li>
                            <li class="divider"></li>
                            <li><a href="#">?</a></li>
                            <li class="divider"></li>
                            <li><a href="#">â‚¬</a></li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            {{ app.request.locale|upper }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu language">
                            <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">EN</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'cn'})) }}">CH</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ru'})) }}">RU</a></li>
                        </ul>
                    </div>

                    <div class="btn-group" id="bin_widget">{% render controller("CatalogBundle:Bin:mainBin") %}</div>
                </div><!--end pull-right-->

            </div><!--end middleCoontainer-->

        </div><!--end container-->
    </div><!--end middleHeader-->

    <div class="mainNav">
        <div class="container">
            <div class="navbar">
                {{ knp_menu_render('catalog_sidebar', {'currentClass': 'active','ancestorClass':'active','template':'::main_menu.html.twig'}) }}
            </div>
        </div><!--end container-->
    </div><!--end mainNav-->

</header>
<!-- end header -->