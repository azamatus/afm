{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/catalog/css/bin.css') }} " type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}

    <div>
        <h2>Корзина:</h2>

        {#{% if products %}#}
        <table class="bin-table">
            <tr>
                <th>Товар:</th>
                <th>Цена:</th>
                <th>Кол-во:</th>
                <th>Итого:</th>
            </tr>
            {% for good in goods %}
            <tr>
                <td>
                    <div class="bin_itemPic">
                        <img src="{{ asset('public/img/phones/'~good.imagePath) }}" />
                    </div>

                    <div class="bin_aboutItem">
                        <a class="name" href="/">{{ assets (good.name) }}</a>

                        <div class="from">{{ assets (good.shortDescription) }}y</div>
                        <a href="" style="color: #ca5f00;">подробная информация &rarr;</a>
                    </div>
                </td>
                <td>
                    <div class="bin_itemPrice">
                        <span class="Som">12 000 сом</span>
                        <span class="Dollar">$ 350</span>
                    </div>
                </td>
                <td>
                    <div class="bin_itemCount">
                        <span class="itemCounter itemAdd">&nbsp;</span>
                        <input class="itemVvod" type="text" value=""/>
                        <span class="itemCounter itemSub">&nbsp;</span>
                    </div>
                </td>
                <td>
                    <div class="bin_itemPrice">
                        <span class="Som">24 000 сом</span>
                        <span class="Dollar">$ 700</span>
                        <span class="bin-remove">&nbsp;</span>
                    </div>
                </td>
            </tr>
            {% endfor %}
            <tr>
                <td>
                    <div class="itog">Итого:</div>
                </td>
                <td></td>
                <td></td>
                <td>
                    <div class="bin_itemTotalPrice">
                        <span class="Som">24 000 сом</span>
                        <span class="Dollar">$ 700</span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="" onclick="return false;">
                        <span class="continue-buy-button">Продолжить покупки</span>
                    </a>
                </td>
                <td></td>
                <td></td>
                <td>
                    <a href="" onclick="return false;">
                        <span class="zakaz-button">Оформить заказ</span>
                    </a>
                </td>
            </tr>
        </table>
        {#{% else %}#}
        {#<h3>Корзина пуста</h3>#}
        {#{% endif %}#}
    </div>

{% endblock body %}