{% extends "::base.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bundles/catalog/js/ajax_pagination.js") }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/catalog/css/catalog.css') }}" type="text/css" media="screen" rel="stylesheet"/>
{% endblock %}

{% block body %}
<div>
    <div class="clearbox"></div>
    <h1 class="left size24px">Остаток в наличии</h1>

    <div id="all-catalog">
        {% if pagination.getTotalItemCount > 0 %}
            {% include  "CatalogBundle:Content:getAjaxRandomProductList.html.twig" with {'pagination':pagination} %}
        {% else %}
            <h2>
                В этой категории товаров пока нет
            </h2>
        {% endif %}
    </div>
    <div class="clearbox"></div>
    <h3>Уточните наличие товара у менеджера</h3>
</div>
{% endblock %}
