<div id="featuredItems">
    <div class="titleHeader clearfix">
        <h3>{{ title|trans({},'CatalogBundle') }}: {% if subtitle is defined %}{{ subtitle }}{% endif %}</h3>

        <div class="pagers">
            <div class="btn-toolbar">
                <button class="btn btn-mini">{{ 'catalog.view_all'|trans({},'CatalogBundle') }}</button>
            </div>
        </div>
    </div>
    <div class="row">
        {% if pagination.getTotalItemCount > 0 %}
            <ul class="hProductItems clearfix">
            {% for product in pagination %}
                {% include  "CatalogBundle:Content:_item.html.twig" with {'product':product} %}
            {% endfor %}
            </ul>
        {% else %}
            <h2>
                В этой категории товаров пока нет
            </h2>
        {% endif %}
    </div>
</div>
