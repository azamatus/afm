
{% if sliders %}


        <div class="span8">
            <div class="flexslider">
                <ul class="slides">
                    {% for slider in sliders %}
                        <li>
                            {% if slider.url %}
                            <a href="{{ slider.url }}">
                                <img src="{% path slider.image, 'slider_standard' %}"/>
                            </a>
                            {% else %}
                                <img src="{% path slider.image, 'slider_standard' %}"/>
                            {% endif %}
                        </li>
                    {% endfor %}

                </ul>
            </div><!--end flexslider-->
        </div><!--end span8-->


{% endif %}